# Shared editor configuration <https://editorconfig.org>

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.rst]
indent_size = 3
indent_style = space

[*.sh]
indent_size = 8
indent_style = tab

[*.py]
indent_size = 4
indent_style = space

[Dockerfile]
indent_size = 8
indent_style = tab
